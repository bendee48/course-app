%h1 
  Listing courses: 
  = @courses.count

.row
  .col-2
    = search_form_for @q do |f|
      .input-group-sm
        = f.search_field :title_or_short_description_cont, placeholder: 'course', class: 'form-control mb-1'
        = f.search_field :language_cont, placeholder: 'language', class: 'form-control mb-1'
        = f.search_field :price_eq, placeholder: 'price', class: 'form-control mb-1'
        = f.search_field :user_email_cont, placeholder: 'email', class: 'form-control mb-1'
        = f.label :level
        = f.select :level_cont, Course.levels, include_blank: true, class: 'form-select form-select-sm' 
        = f.submit 'Submit', class: 'btn btn-sm btn-outline-info'
    =link_to courses_path, class: 'btn btn-sm btn-info mt-3' do 
      .fas.fa-redo-alt
  .col-10
    .card-columns
      = render partial: 'courses/course', collection: @courses

%br
  
