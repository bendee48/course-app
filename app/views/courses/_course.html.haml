.card
  .card-header
    .fas.fa-graduation-cap
    = link_to course.title, course
  .card-body
    - if current_page?(course_path(course))
      = course.description
    - elsif current_page?(courses_path)
      = course.short_description
  .card-footer
    .fas.fa-level-up-alt
    = course.level
    \|
    .fas.fa-globe-americas
    = course.language
    \|
    .fas.fa-wallet
    = number_to_currency(course.price, unit: 'Â£')
  .card-footer
    .far.fa-clock
    = course.created_at.strftime('%d %b %Y')
    .row
    .fas.fa-chalkboard-teacher
    = course.user
  .card-footer
    = link_to 'Show', course, class: 'btn btn-outline-info'
    = link_to 'Edit', edit_course_path(course), class: 'btn btn-outline-warning'
    = link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger'