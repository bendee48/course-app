.card.mt-4
  .card-header
    Editing roles for 
    = @user
  .card-body
    = simple_form_for(@user) do |f|
      = f.error_notification
      = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
      .form-inputs
        = f.collection_check_boxes :role_ids, Role.all, :id, :name, class: 'form-check-input p-3'
      .form-actions
        = f.button :submit, class: 'btn btn-sm'
  .card-footer 
    = link_to 'Cancel', users_path, class: 'btn btn-sm btn-outline-danger'
